
@model  Cqrs.Web.Models.RegistrationViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="container">

    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <fieldset style="border-style: dotted">

            <div class="form-group">

                @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "col-md-4 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <button id="btnRegister" name="btnRegister" class="btn btn-primary">Command</button>
                    <span style="padding-left: 50px;"></span>
                    <button id="btnRegister" name="btnRegister" class="btn btn-primary">Query</button>
                </div>
            </div>

        </fieldset>
    }

</div>
