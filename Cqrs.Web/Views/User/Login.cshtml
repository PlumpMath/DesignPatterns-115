@model Cqrs.Web.Models.RegistrationViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">

    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <fieldset style="border-style: dotted">

            <div class="form-group">

                @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "col-md-4 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                      <input type="submit" id="btnLogin" name="Login" class="btn btn-primary" />
                </div>

                @Html.ActionLink("Register", "Register", "User", null);
            </div>

        </fieldset>
    }

</div>